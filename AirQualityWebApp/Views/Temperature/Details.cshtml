@model IEnumerable<Temperature>

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Sensor Values</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Latest Temperature Value</h4>
        <hr />

        @if (ViewBag.id == null || ViewBag.value == null)
        {
            <p class="card-text">No values to display</p>
        }
        else
        {
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@ViewBag.id</dd>

                <dt class="col-sm-3">Temperature (C):</dt>
                <dd class="col-sm-9">@ViewBag.value</dd>
            </dl>
        }

        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Temperature")'">Get Values</button>
    </div>
</div>

<div class="mt-3">
    @*<a asp-action="Index">Back to List</a>*@
</div>
